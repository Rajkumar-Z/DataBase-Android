<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_student_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:hint="Enter Student Name" />

    <EditText
        android:id="@+id/et_student_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:hint="Enter Student Age" />

    <EditText
        android:id="@+id/et_student_class"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:hint="Enter Student Class" />


    <EditText
        android:id="@+id/et_student_marks"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:hint="Enter Student Marks" />

    <Button
        android:id="@+id/btn_add_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_get_student_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Student Details"
        android:layout_gravity="center"/>



</LinearLayout>